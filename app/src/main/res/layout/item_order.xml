<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_centerVertical="true"
        android:id="@+id/img_head"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:riv_corner_radius="35dp"
        android:layout_marginStart="5dp"
        android:src="@mipmap/head_default"
        />

    <ImageView
        android:id="@+id/img_get"
        android:visibility="invisible"
        android:src="@mipmap/get"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_head"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/tv_name"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="就是名字啊"
            android:maxLines="1"
            android:maxEms="5"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_time"
            tools:text="魔兽争霸"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#888787"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            >

            <com.play.accompany.design.ColorText
                android:id="@+id/tv_type"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_price"
                tools:text="价格"
                android:layout_marginStart="5dp"
                android:textSize="14sp"
                android:textColor="@color/color_price_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_place"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/gold"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>

            <TextView
                android:id="@+id/tv_spend"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/red"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_state"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            tools:text="12344"
            tools:background="@drawable/blue_background"
            android:textColor="@color/color_white"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_tips"
            android:textColor="@color/color_order_tip"
            android:textSize="8sp"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</RelativeLayout>
