<RelativeLayout
    android:layout_marginBottom="@dimen/dp_25"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:paddingLeft="@dimen/dp_19"
    android:paddingRight="@dimen/dp_19"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ripple_origin"
    >

    <include layout="@layout/user_top"/>

    <TextView
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/tv_price"
        tools:text="25币/小时"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/sp_14"
        android:minWidth="@dimen/dp_80"
        android:textColor="@color/home_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toStartOf="@id/tv_price"
        android:gravity="center_vertical"
        android:layout_marginEnd="@dimen/dp_6"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/location"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"/>

        <TextView
            android:id="@+id/tv_distance"
            tools:text="2.5km"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/home_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>
