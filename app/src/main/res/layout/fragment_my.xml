<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:background="@mipmap/my_background"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_205">

            <RelativeLayout
                android:padding="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_shape"
                android:layout_width="@dimen/dp_84"
                android:layout_height="@dimen/dp_84">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_head"
                    tools:src="@mipmap/head_default"
                    android:layout_centerInParent="true"
                    app:riv_corner_radius="@dimen/dp_42"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>


            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_58"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/color_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxEms="6"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

                <TextView
                    android:id="@+id/tv_id"
                    android:textColor="@color/color_white"
                    android:shadowColor="@color/color_black"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_edit"
                android:layout_marginTop="@dimen/dp_50"
                android:background="@drawable/edit_background"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_32"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48">

                <ImageView
                    android:src="@drawable/edit"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_120"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginStart="@dimen/dp_114"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_attention"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/white"
                        android:text="0"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dp_2"
                        android:text="@string/attention"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dp_114"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_fans"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        android:text="0"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="@string/fans"
                        android:layout_marginTop="@dimen/dp_2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            app:cardElevation="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_m_20"
            app:cardCornerRadius="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_96">

            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/lin_wallet"
                    style="@style/my_item_lin">
                    
                    <ImageView
                        android:src="@mipmap/my_wallet"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"/>

                    <TextView
                        android:text="@string/wallet"
                        android:layout_marginTop="@dimen/dp_9"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                
                <RelativeLayout
                    android:id="@+id/rl_order"
                    android:background="@drawable/ripple_origin_white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@mipmap/my_order"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"/>

                        <TextView
                            android:text="@string/my_order"
                            android:layout_marginTop="@dimen/dp_9"
                            android:textSize="@dimen/sp_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_order"
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/dp_65"
                        android:layout_marginTop="@dimen/dp_12"
                        android:gravity="center"
                        android:textSize="@dimen/sp_8"
                        android:padding="@dimen/dp_2"
                        android:textColor="@color/white"
                        android:background="@drawable/shape_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_220">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_marginStart="@dimen/dp_18"
                    android:text="更多服务"
                    android:textSize="@dimen/sp_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_96">

                    <LinearLayout
                        android:id="@+id/lin_master"
                        style="@style/my_item_lin">

                        <ImageView
                            android:src="@mipmap/my_master"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"/>

                        <TextView
                            android:text="@string/master"
                            android:layout_marginTop="@dimen/dp_9"
                            android:textSize="@dimen/sp_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_invite"
                        style="@style/my_item_lin">

                        <ImageView
                            android:src="@mipmap/my_invite"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"/>

                        <TextView
                            android:text="@string/invite_code"
                            android:layout_marginTop="@dimen/dp_9"
                            android:textSize="@dimen/sp_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_setting"
                        style="@style/my_item_lin">

                        <ImageView
                            android:src="@mipmap/my_setting"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"/>

                        <TextView
                            android:text="@string/setting"
                            android:layout_marginTop="@dimen/dp_9"
                            android:textSize="@dimen/sp_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_service"
                        style="@style/my_item_lin">

                        <ImageView
                            android:src="@mipmap/my_service"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"/>

                        <TextView
                            android:text="@string/service"
                            android:layout_marginTop="@dimen/dp_9"
                            android:textSize="@dimen/sp_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>

