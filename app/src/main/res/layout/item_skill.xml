<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_head"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:riv_corner_radius="@dimen/dp_5"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"/>

    <TextView
        android:id="@+id/skill_name"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="@id/img_head"
        app:layout_constraintLeft_toRightOf="@id/img_head"
        android:textSize="@dimen/sp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/skill_price"
        android:textColor="#D14E4E"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="@id/img_head"
        app:layout_constraintLeft_toRightOf="@id/img_head"
        android:textSize="@dimen/sp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_order"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/ripple_blue_button"
        android:textColor="@color/white"
        android:text="下单"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_30"/>

</androidx.constraintlayout.widget.ConstraintLayout>